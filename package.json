{
  "name": "d4d-express-api-boilerplate",
  "version": "1.0.0",
  "description": "A server side element to handle apis. Runs with SQL databases, Use TypeORM, JWT authentication, decorators & Custom seeders.",
  "type": "commonjs",
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/validator": "^13.7.14",
    "ts-node": "^10.9.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "chance": "^1.1.11",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "express-sslify": "^1.2.0",
    "fs": "^0.0.1-security",
    "helmet": "^6.1.5",
    "hpp": "^0.2.3",
    "http-proxy-middleware": "^2.0.6",
    "http-status": "^1.7.3",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-simple": "^0.5.6",
    "mime": "^3.0.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.8",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.1",
    "nodemon": "^3.0.1",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "rand-token": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.14",
    "validator": "^13.9.0",
    "winston": "^3.9.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.19.3/xlsx-0.19.3.tgz"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/api/app.bootstrap.ts",
    "prod": "node dist/api/app.bootstrap.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "ts-node src/scripts/run-seed-all.script.ts",
    "migration:create": "ts-node ./node_modules/.bin/typeorm migration:create src/api/core/migrations/d4d-migration",
    "migration:generate": "ts-node ./node_modules/.bin/typeorm migration:generate -d src/api/config/database.config.ts src/api/core/migrations/cred-migration",
    "migration:up": "ts-node ./node_modules/.bin/typeorm migration:run -d src/api/config/database.config.ts",
    "migration:down": "./node_modules/.bin/ts-node ./node_modules/.bin/typeorm migration:revert -d src/api/config/database.config.ts",
    "swagger:generate": "node_modules/.bin/jsdoc2swagger -o swagger.json src/api/core/controllers/*.ts"
  }
}